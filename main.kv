MyLayout:
        orientation: "vertical"
        padding: dp(48)
        input: blog1
        output: blog2

        MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(16)

                GridLayout:
                        id: header
                        size_hint_y: None
                        height: self.minimum_height
                        cols: 2

                        MDLabel:
                                text: "Abraar's Blog"

                        GridLayout:
                                size_hint_y: None
                                height: self.minimum_height
                                cols: 2

                                MDFlatButton:
                                        text: "Register"

                                MDFlatButton:
                                        text: "Login"

                MDBoxLayout:
                        MDTextFieldRect:
                                id: blog1

                MDBoxLayout:
                        adaptive_size: True
                        height: dp(56)
                        pos_hint: {'center_x': .5}

                        MDRoundFlatButton:
                                text: "Post"
                                on_release: root.post_text()

                ScrollView:
                        GridLayout:
                                size_hint_y: None
                                height: self.minimum_height
                                id: blog2
                                cols: 1