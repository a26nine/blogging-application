WindowManager:
        id: window_manager

        HomeScreen:
        ListScreen:
        PostScreen:
        RegistrationScreen:


<HomeScreen>:
        name: "home"

        email: email
        password: password
        title: title
        content: content

        MDBoxLayout:
                orientation: 'vertical'

                MDToolbar:
                        title: "FLOW OF THOUGHTS"
                        right_action_items: [['book-open', lambda x: app.root.change_screen('list')], ['file-edit', lambda x: app.root.change_screen('post')], ['account', lambda x: app.root.change_screen('registration')]]

                MDBoxLayout:
                        orientation: 'vertical'
                        padding: dp(16)
                        spacing: dp(16)

                        MDStackLayout:
                                orientation: 'lr-tb'
                                padding: dp(16)
                                spacing: dp(16)

                                MDTextFieldRound:
                                        id: email
                                        icon_left: 'email'
                                        hint_text: "Email Address"

                                MDTextFieldRound:
                                        id: password
                                        icon_left: 'key-variant'
                                        hint_text: "Password"
                                        password: True

                        MDTextField:
                                id: title
                                hint_text: "Title"

                        MDTextFieldRect:
                                id: content
                                hint_text: "Content here.."

                        MDTextButton:
                                text: "Attach Media"
                                on_release: app.file_manager_open()

                        MDGridLayout:
                                cols: 2
                                col_default_width: 144
                                col_force_default: True

                                MDLabel:
                                        text: "Private"

                                MDCheckbox:
                                        on_active: app.on_checkbox_active(*args)

                        MDStackLayout:
                                orientation: 'rl-tb'

                                MDRaisedButton:
                                        text: "Post!"
                                        on_release: root.post_text()


<ListScreen>:
        name: "list"

        MDBoxLayout:
                orientation: 'vertical'

                MDToolbar:
                        title: "FLOW OF THOUGHTS"
                        right_action_items: [['login-variant', lambda x: app.root.change_screen('home')], ['file-edit', lambda x: app.root.change_screen('post')], ['account', lambda x: app.root.change_screen('registration')]]

                MDBoxLayout:
                        orientation: 'vertical'
                        padding: dp(16)

                        ScrollView:

                                MDGridLayout:
                                        id: post_list
                                        cols: 2
                                        adaptive_height: True
                                        padding: dp(32)
                                        spacing: dp(48)


<PostScreen>:
        name: "post"


<RegistrationScreen>:
        name: "registration"
        email: email
        password: password

        MDBoxLayout:
                orientation: 'vertical'

                MDToolbar:
                        title: "FLOW OF MY THOUGHTS"
                        right_action_items: [['login-variant', lambda x: app.root.change_screen('home')], ['book-open', lambda x: app.root.change_screen('list')], ['file-edit', lambda x: app.root.change_screen('post')]]

                MDGridLayout:
                        padding: dp(32)
                        spacing: dp(32)
                        rows: 3

                        MDTextFieldRound:
                                id: email
                                icon_left: 'email'
                                hint_text: "Email Address"

                        MDTextFieldRound:
                                id: password
                                icon_left: 'key-variant'
                                hint_text: "Password"
                                password: True

                        AnchorLayout:
                                anchor_x: 'center'
                                anchor_y: 'top'

                                MDFillRoundFlatButton:
                                        text: "Register"
                                        on_release: root.register()