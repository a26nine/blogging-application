WindowManager:
        HomeScreen:
        RegistrationScreen:

<HomeScreen>:
        all_posts: all_posts
        input: input

        name: "home"

        MDBoxLayout:
                orientation: 'vertical'
                padding: dp(32)
                MDBoxLayout:
                        orientation: 'vertical'

                        MDGridLayout:
                                adaptive_height: True
                                cols: 2

                                MDLabel:
                                        text: "FLOW OF MY THOUGHTS"

                                MDGridLayout:
                                        adaptive_height: True
                                        cols: 2

                                        MDFlatButton:
                                                text: "Registration"
                                                on_release: app.root.current = 'registration'

                        MDBoxLayout:
                                MDTextFieldRect:
                                        id: input

                        MDBoxLayout:
                                adaptive_size: True
                                padding: dp(16)
                                pos_hint: {'center_x': .5}

                                MDRoundFlatButton:
                                        text: "Post"
                                        on_release: root.post_text()

                        MDBoxLayout:
                                adaptive_size: True
                                padding: dp(16)

                                MDRoundFlatButton:
                                        text: "Load older posts.."
                                        on_release: root.load_blog()

                        ScrollView:
                                MDGridLayout:
                                        adaptive_height: True
                                        id: all_posts
                                        cols: 1

<RegistrationScreen>:
        name: "registration"
        MDBoxLayout:
                orientation: 'vertical'
                padding: dp(32)
                spacing: dp(32)
                adaptive_height: True

                MDLabel:
                        text: "FLOW OF MY THOUGHTS"

                MDTextFieldRound:
                        icon_left: 'email'

                MDTextFieldRound:
                        icon_left: 'key-variant'
                        icon_right: 'eye-off'

                MDRoundFlatButton:
                        text: "Back"
                        on_release: app.root.current = 'home'