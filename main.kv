WindowManager:
        HomeScreen:
        RegistrationScreen:
        BlogScreen:

<HomeScreen>:
        title: title
        content: content
        name: "home"

        MDBoxLayout:
                orientation: 'vertical'

                MDGridLayout:
                        adaptive_height: True
                        rows: 2

                        MDToolbar:
                                title: "FLOW OF MY THOUGHTS"
                                right_action_items: [['login', lambda x: app.root.change_screen('registration')]]


                MDBoxLayout:
                        orientation: 'vertical'
                        padding: dp(16)
                        spacing: dp(16)

                        MDTextField:
                                id: title
                                hint_text: "Title"

                        MDTextFieldRect:
                                id: content
                                hint_text: "Content here.."

                        MDTextButton:
                                text: "Attach Media"
                                on_release: app.file_manager_open()

                        MDGridLayout:
                                cols: 2
                                col_default_width: 144
                                col_force_default: True

                                MDLabel:
                                        text: "Private"

                                MDCheckbox:
                                        on_active: app.on_checkbox_active(*args)

                        MDBoxLayout:
                                orientation: 'vertical'
                                adaptive_size: True
                                pos_hint: {'right': 1}

                                MDRaisedButton:
                                        text: "Post!"
                                        on_release: root.post_text()


                        MDRoundFlatButton:
                                text: "Recent blog posts.."
                                on_release: app.root.change_screen("all_posts")


<RegistrationScreen>:
        name: "registration"
        MDBoxLayout:
                orientation: 'vertical'
                padding: dp(32)
                spacing: dp(32)
                adaptive_height: True

                MDLabel:
                        text: "FLOW OF MY THOUGHTS"

                MDTextFieldRound:
                        icon_left: 'email'

                MDTextFieldRound:
                        icon_left: 'key-variant'
                        icon_right: 'eye-off'

                MDRoundFlatButton:
                        text: "Back"
                        on_release: app.root.change_screen('home')

<BlogScreen>:
        name: "all_posts"

        MDBoxLayout:
                orientation: 'vertical'

                MDToolbar:
                        title: "FLOW OF MY THOUGHTS"
                        right_action_items: [['login-variant', lambda x: app.root.change_screen('registration')]]

                MDBoxLayout:
                        orientation: 'vertical'
                        padding: dp(8)

                        ScrollView:
                                pos_hint: {'center_x': .55}

                                MDGridLayout:
                                        adaptive_height: True
                                        spacing: dp(32)
                                        id: list
                                        cols: 2