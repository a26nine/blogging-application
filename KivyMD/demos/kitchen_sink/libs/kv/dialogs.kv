<KitchenSinkItemConfirm>
    on_release: root.set_icon(check)

    CheckboxRightWidget:
        id: check
        group: "check"


<KitchenSinkDialogsCustomContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        hint_text: "City"

    MDTextField:
        hint_text: "Street"


<KitchenSinkDialogs>
    name: 'dialogs'
    app: app

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    MDRaisedButton:
        text: "ALERT"
        pos_hint: {'center_x': .5, 'center_y': .8}
        on_release: root.show_example_alert_dialog()

    MDRaisedButton:
        text: "SIMPLE"
        pos_hint: {'center_x': .5, 'center_y': .6}
        on_release: root.show_example_simple_dialog()

    MDRaisedButton:
        text: "CONFIRMATION"
        pos_hint: {'center_x': .5, 'center_y': .4}
        on_release: root.show_example_confirmation_dialog()

    MDRaisedButton:
        text: "CUSTOM"
        pos_hint: {'center_x': .5, 'center_y': .2}
        opposite_colors: True
        on_release: root.show_example_custom_dialog()
