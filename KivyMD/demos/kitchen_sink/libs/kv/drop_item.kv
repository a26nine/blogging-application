#:import toast kivymd.toast.toast


<MDDropItem>
    name: "drop item"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}

    MDDropDownItem:
        id: dropdown_item
        text: "Item 0"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        dropdown_bg: [1, 1, 1, 1]
        on_release: root.menu.open()

    MDRaisedButton:
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        text: 'Chek Item'
        on_release: toast(dropdown_item.current_item)
